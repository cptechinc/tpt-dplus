{#
	var                    Description / Instance of
	-------------------------------------------------
	page                   ProcessWire\Page
	customers              Customer[]|ObjectCollection
#}
<table id="customer-index" class="table table-bordered">
	<thead>
		<tr>
			<th scope="col">
				<a href="{{ page.get_sortURL('customerID') }}" class="link">ID</a>
			</th>
			<th scope="col">
				<a href="{{ page.get_sortURL('name') }}" class="link">Name</a>
			</th>
			<th scope="col">Address</th>
			<th scope="col">
				<a href="{{ page.get_sortURL('city') }}" class="link">City</a>
			</th>
			<th scope="col">
				<a href="{{ page.get_sortURL('state') }}" class="link">State</a>
			</th>
			<th scope="col">
				<a href="{{ page.get_sortURL('zip') }}" class="link">Zip</a>
			</th>
			<th scope="col">
				<a href="{{ page.get_sortURL('date_lastpurchased') }}" class="link">Last Purchase Date</a>
			</th>
		</tr>
	</thead>
	<tbody>
		{% if customers.count() %}
			{% for customer in customers %}
				<tr>
					<td scope="row">
						<a href="{{ page.vxm_customerURL(customer.id) }}" class="link">
							<strong>{{ customer.id }}</strong>
						</a>
					</td>
					<td>{{ customer.name }}</td>
					<td>{{ customer.address }}</td>
					<td>{{ customer.city }}</td>
					<td>{{ customer.state }}</td>
					<td>{{ customer.zip }}</td>
					<td>{{ customer.date_lastpurchased|convertdate }}</td>
				</tr>
			{% endfor %}
		{% else %}
			<tr>
				<td colspan="7" class="bg-secondary text-white text-center">
					No Results found
				</td>
			</tr>
		{% endif %}
	</tbody>
</table>
